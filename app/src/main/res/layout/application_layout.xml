<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView android:id="@+id/application_company_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:text="Company"
        android:layout_weight="0.5" />
    <TextView android:id="@+id/application_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:text="Applied"
        android:layout_weight="0.5" />
    <Button android:id="@+id/withdraw_application"
        android:text="@string/application_withdraw"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="withdrawApplication"/>

</LinearLayout>
